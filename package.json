{
  "name": "sweetbox",
  "version": "0.0.0",
  "scripts": {
    "initialize": "node src/config/init.js",
    "start": "yarn ntl -s 3 -A --exclude cy:open cy:run upload build start initialize",
    "serve": "ng serve",
    "build": "ng build --base-href https://skycader.github.io/sweetbox/",
    "upload": "npx angular-cli-ghpages --dir=dist/sweetbox/browser",
    "deploy": "yarn build && yarn upload",
    "serve-public": "ng serve --host 0.0.0.0",
    "test": "ng test",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "e2e": "concurrently \"npm run serve\" \"wait-on http-get://localhost:4200 && npm run cy:run\" --kill-others --success first",
    "e2e-gui": "concurrently \"npm run serve\" \"wait-on http-get://localhost:4200 && npm run cy:open\" --kill-others --success first",
    "lint": "ng lint"
  },
  "ntl": {
    "descriptions": {
      "initialize": "give your project a name...",
      "serve": "start dev server on http://localhost:4200",
      "serve-public": "start dev server on your public ip:4200",
      "test": "Run project's tests with coverage",
      "e2e": "Run all e2e tests in background",
      "e2e-gui": "Open cypress and run tests visually",
      "deploy": "Deploy current project into github pages",
      "serve:ssr": "Serve app the server side way"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.5",
    "@angular/cdk": "18.0.5",
    "@angular/common": "^18.0.5",
    "@angular/compiler": "^18.0.5",
    "@angular/core": "^18.0.5",
    "@angular/forms": "^18.0.5",
    "@angular/material": "18.0.5",
    "@angular/platform-browser": "^18.0.5",
    "@angular/platform-browser-dynamic": "^18.0.5",
    "@angular/platform-server": "^18.0.5",
    "@angular/router": "^18.0.5",
    "@angular/service-worker": "^18.0.5",
    "@angular/ssr": "^18.0.6",
    "@ngrx/effects": "^18.0.1",
    "@ngrx/operators": "^18.0.0",
    "@ngrx/store": "18.0.1",
    "@ngrx/store-devtools": "^18.0.1",
    "bootstrap": "^5.3.3",
    "concurrently": "^8.2.2",
    "cypress": "^13.10.0",
    "dexie": "^4.0.7",
    "express": "^4.18.2",
    "global": "^4.4.0",
    "lodash": "^4.17.21",
    "ntl": "^5.1.0",
    "readline-sync": "^1.4.10",
    "replace-in-file": "^7.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "wait-on": "^7.2.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.6",
    "@angular/cli": "^18.0.6",
    "@angular/compiler-cli": "^18.0.5",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/lodash": "^4.17.5",
    "@types/node": "^18.18.0",
    "angular-eslint": "18.0.1",
    "eslint": "^9.3.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.4.5",
    "typescript-eslint": "8.0.0-alpha.20"
  }
}
